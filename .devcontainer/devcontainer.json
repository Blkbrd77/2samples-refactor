{
  "name": "2samples-refactor-dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
      "ghcr.io/devcontainers/features/python": {
          "version": "3.11"
      }
  },
  "postCreateCommand": "bash -c 'python3 -m venv venv && source venv/bin/activate && pip install flask pytest==7.4.4'",
  "customizations": {
      "vscode": {
          "extensions": [
              "ms-python.python",
              "ms-python.vscode-pylance",
              "visualstudioexptteam.vscodeintellicode"
          ],
          "settings": {
              "python.defaultInterpreterPath": "/workspaces/2samples-refactor/venv/bin/python3"
          }
      }
  },
"postStartCommand": "bash -c 'source venv/bin/activate && python3 app/main.py &'",
"forwardPorts": [5000]
}
