    destinations: ['Greece', 'Bahamas', 'Ireland', 'Northern Ireland', 'Scotland', 'England', 'Japan'],
    soloDestinations: [],
  },
];

const timeline = [
  {
    year: '2026',
    title: 'Mediterranean Cruise',
    travelers: ['jay', 'sydney', 'reagan', 'taylor'],
    description: 'MSC cruise departing from Rome, visiting Spain, France, and Italy.',
    upcoming: true,
  },
  {
    year: '2025',
    title: 'Bahamas Cruise',
    travelers: ['jay', 'sydney', 'reagan', 'taylor'],
    description: "A Fourth of July cruise with Sydney's parents, departing Cape Canaveral and visiting Nassau and MSC's private cay.",
  },
  {
    year: '2025',
    title: 'Greece Adventure',
    link: '/greece',
    travelers: ['jay', 'sydney', 'reagan', 'taylor'],
    description: 'Athens and the Acropolis followed by a Greek island cruise aboard the Resilient Lady. Rhodes wine tours, ancient Ephesus in Turkey, sailing in Santorini, and exploring Crete.',
  },
  {
    year: '2023',
    title: 'Ireland & UK',
    links: [{ text: 'Ireland', href: '/ireland' }, { text: 'UK', href: '/uk' }],
    travelers: ['jay', 'sydney', 'reagan', 'taylor'],
    description: 'Eleven days across the Emerald Isle and Great Britain. Dublin, Blarney Castle, Cliffs of Moher, Giants Causeway, Glasgow, Loch Ness, and Edinburgh.',
  },
  {
    year: '2019',
    title: 'Japan',
    link: '/japan',
    travelers: ['jay', 'sydney', 'reagan', 'taylor'],
    description: 'Explored Osaka, rode the Bullet Train to Nagoya, and experienced Tokyo ahead of the 2020 Olympics.',
  },
  {
    year: '2017',
    title: 'Taiwan',
    travelers: ['jay'],
    description: 'Business trip to attend program meetings with a customer project.',
  },
  {
    year: '2016',
    title: 'Portugal',
    travelers: ['jay'],
    description: 'NATO Seasparrow Missile Program Management Review.',
  },
  {
    year: '2010',
    title: 'Iraq',
    travelers: ['jay'],
    description: 'Six month deployment courtesy of Uncle Sam, serving as Ops Officer for a DCMA unit.',
  },
  {
    year: '1999',
    title: 'Mexico',
    travelers: ['jay'],
    description: 'Quick trip to Tijuana visiting a buddy stationed in San Diego with the Navy.',
  },
  {
    year: '1996',
    title: 'Costa Rica',
    travelers: ['jay'],
    description: 'Graduation surf trip with buddies to Jaco, surfing spots up and down the Pacific coast.',
  },
