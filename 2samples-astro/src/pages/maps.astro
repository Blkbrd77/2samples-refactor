---
import Base from '../layouts/Base.astro';

const familyMembers = [
  {
    id: 'jay',
    name: 'Jay',
    initial: 'J',
    destinationCount: 14,
    destinations: ['Greece', 'Bahamas', 'Ireland', 'Northern Ireland', 'Scotland', 'England', 'Japan', 'Turkey', 'Mexico'],
    soloDestinations: ['Germany', 'Iraq', 'Taiwan', 'Costa Rica', 'Portugal'],
  },
  {
    id: 'sydney',
    name: 'Sydney',
    initial: 'S',
    destinationCount: 9,
    destinations: ['Greece', 'Bahamas', 'Ireland', 'Northern Ireland', 'Scotland', 'England', 'Japan', 'Turkey', 'Mexico'],
    soloDestinations: [],
  },
  {
    id: 'reagan',
    name: 'Reagan',
    initial: 'R',
