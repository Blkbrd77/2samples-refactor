---
import { navLinks } from '../lib/navigation';

interface Props {
  title?: string;
}

const { title = '2Samples' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
    <link
      rel="icon"
      type="image/png"
      href="https://d1rhrn7ca7di1b.cloudfront.net/images/favicon-16x16.png"
    />
  </head>
  <body>
    <nav class="header">
      {navLinks.map((link, index) => (
        <>
          <a href={link.href}>{link.label}</a>
          {index < navLinks.length - 1 && ' | '}
        </>
      ))}
    </nav>
    <slot />
  </body>
</html>
